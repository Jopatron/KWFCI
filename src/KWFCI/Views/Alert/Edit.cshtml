@model Alert

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AlertID" />
    <div class="form-group">
        <label asp-for="AlertDate"></label>
        <div><span asp-validation-for="AlertDate" class="text-danger"></span></div>
        <input asp-for="AlertDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Priority"></label>
        <div><span asp-validation-for="Priority" class="text-danger"></span></div>
        <input asp-for="Priority" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Message"></label>
        <div><span asp-validation-for="Message" class="text-danger"></span></div>
        <input asp-for="Message" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a href="/Alerts" class="btn btn-default">Cancel</a>
    </div>
</form>