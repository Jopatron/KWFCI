@model KWFCI.Models.KWTask

<button type="button" class="newKWTaskBtn btn btn-default" data-toggle="modal" data-target="#newKWTask">New Task</button>

<div class="modal fade" id="newKWTask" tabindex="-1" role="dialog" aria-labelledby="newKWTaskModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="settingsLabel">New Task: @*<em>TODO: Use JavaScript to dynamically make this the broker name while being typed</em>*@</h4>
            </div>
            <div class="modal-body">

                <form asp-controller="KWTasks" asp-action="AddKWTask" method="post">
                    <div class="form-group center-block">

                        <label asp-for="Description">Description:</label>
                        <input asp-for="Description" class="form-control" /><br />

                        <label asp-for="DateDue">Date Due:</label>
                        <input id="taskDateDue" asp-for="DateDue" class="form-control" /><br />

                        <label asp-for="AlertDate">Alert Date:</label>
                        <input asp-for="AlertDate" class="form-control" /><br />

                        @*Hide Priority unless a date is entered into AlertDate*@
                        <div id="taskPriority" class="hidden ">
                            <label asp-for="Priority">Priority:</label>
                            <select class="form-control" asp-for="Priority">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>

                        <input type="hidden" asp-for="DateCreated" />
                        <input type="hidden" class="addID" asp-for="KWTaskID" />

                        <button type="submit" class="btn btn-primary pull-right">Create Task</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>