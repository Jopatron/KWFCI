@model KWFCI.Models.StaffProfile

@{
    ViewBag.Title = "Settings";
}

<div class="panel panel-danger center-block">
    <div class="panel-heading text-center">Settings for @Model.FirstName @Model.LastName</div>
    <div class="panel-body">
        <form class="form-horizontal" asp-action="Edit" method="post">
            <input type="hidden" asp-for="StaffProfileID" />
            <div class="form-group">
                <label class="control-label col-sm-3" asp-for="FirstName">First Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter first name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" asp-for="LastName">Last Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="LastName" class="form-control" placeholder="Enter last name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" asp-for="Email">Email:</label>
                <div class="col-sm-9">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <div class="checkbox">
                        <label><input type="checkbox" asp-for="EmailNotifications">Email Notifications</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a class="btn btn-primary" id="changePWBtn">Change Password</a>
                </div>
            </div>
        </form>


        <form class="form-horizontal" id="changePW" asp-action="Edit" method="post">
            <input type="hidden" asp-for="StaffProfileID" />
            <div class="form-group">
                <label class="control-label col-sm-4" asp-for="FirstName">Old Password:</label>
                <div class="col-sm-8">
                    <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter first name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" asp-for="LastName">New Password:</label>
                <div class="col-sm-8">
                    <input type="text" asp-for="LastName" class="form-control" placeholder="Enter last name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" asp-for="Email">Retype New Password:</label>
                <div class="col-sm-8">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-success pull-right">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>