@model Broker
<div class="modal-fade">
    <div class="modal-dialog" role="document">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h2 class="modal-title">@Model.FirstName @Model.LastName</h2>
        </div>
        <div class="modal-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="BrokerID" />
                <div class="form-group center-block">
                    <div class="row">
                        <div class="col-xs-4">
                            <label asp-for="FirstName">First Name:</label>
                        </div>
                        <div class="col-xs-8">
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-xs-4">
                            <label asp-for="LastName">Last Name:</label>
                        </div>

                        <div class="col-xs-8">
                            <input asp-for="LastName" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-xs-4">
                            <label asp-for="Email">Email:</label>
                        </div>

                        <div class="col-xs-8">
                            <input asp-for="Email" class="form-control" />
                        </div>
                    </div>
                        
                    <div class="row">
                        <div class="col-xs-4">
                            <label asp-for="Type">Broker Type:</label>
                        </div>
                        <div class="col-xs-8">
                            <select class="form-control" asp-for="Type">
                                <option>New Broker</option>
                                <option>Broker In Transition</option>
                            </select>
                        </div> 
                    </div>   
                    
                    <div class="row">
                        <div class="col-xs-4">
                            <label asp-for="Status"></label>
                        </div>

                        <div class="col-xs-8">
                            <span asp-validation-for="Status" class="text-danger"></span>
                            <select asp-for="Status" class="form-control">
                                <option value="Active" selected="selected">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-check form-check-inline">
                                <label class="form-check-label">
                                    <input class="form-check-input pull-right" type="checkbox" asp-for="EmailNotifications">Email Notifications: &nbsp;&nbsp;
                                </label>
                            </div>
                        </div>    
                    
                    </div>
                        <button type="submit" class="btn btn-primary pull-right">Save</button>
                    </div>
            </form>
        </div>

    </div>

</div>



