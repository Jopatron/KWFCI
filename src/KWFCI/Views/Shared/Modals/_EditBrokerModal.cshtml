@model KWFCI.Models.Broker

@{
    ViewBag.Title = "Brokers";
}

<div class="modal fade" id="editBroker" tabindex="-1" role="dialog" aria-labelledby="editBrokerModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="settingsLabel">@Model.FirstName @Model.LastName</h4>
            </div>
            <div class="modal-body">

                <form asp-controller="Brokers" asp-action="EditBroker" method="post">
                    <div class="form-group center-block">
                        <input type="hidden" asp-for="@Model.BrokerID" />
                        <label asp-for="FirstName">First Name:</label>
                        <input asp-for="FirstName" class="form-control" value="@Model.FirstName" /><br />

                        <label asp-for="LastName">Last Name:</label>
                        <input asp-for="LastName" class="form-control" /><br />

                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" class="form-control" /><br />

                        <label asp-for="Type">Broker Type:</label>
                        <select class="form-control" asp-for="Type">
                            <option>New Broker</option>
                            <option>Broker In Transition</option>
                        </select>

                        <label asp-for="EmailNotifications">EmailNotifications:</label>
                        <input asp-for="EmailNotifications" class="form-control" type="checkbox" /><br />



                        <button type="submit" class="btn btn-primary pull-right">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>