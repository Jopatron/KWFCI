@model KWFCI.Models.KWTask


<div class="modal fade" id="newKWTask" tabindex="-1" role="dialog" aria-labelledby="newKWTask">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="settingsLabel">New Task: @*<em>TODO: Use JavaScript to dynamically make this the broker name while being typed</em>*@</h4>
            </div>
            <div class="modal-body">

                <form asp-controller="KWTasks" asp-action="AddKWTask" method="post">
                    <div class="form-group center-block">

                        <div>
                            <label asp-for="Message">Message:</label>
                            <textarea asp-for="Message" class="form-control taskMessage"></textarea>
                        </div>
                        
                        <div>
                            <label asp-for="DateDue">Date Due:</label>
                            <input id="taskDateDue" asp-for="DateDue" class="form-control" />
                        </div>

                        <div>
                            <label asp-for="AlertDate">Alert Date:</label>
                            <input asp-for="AlertDate" class="form-control" />
                        </div>
                        
                        <div>
                            <div class="taskPriority">
                                <label asp-for="Priority">Priority:</label>
                                <select class="form-control" asp-for="Priority">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </div>
                        </div>

                        <input type="hidden" asp-for="DateCreated" />
                        <input type="hidden" class="addID" asp-for="KWTaskID" />

                        <button type="submit" class="btn btn-primary pull-right">Create Task</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>