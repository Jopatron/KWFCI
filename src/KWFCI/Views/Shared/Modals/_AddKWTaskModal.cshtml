@model KWFCI.Models.ViewModels.KWTaskVM


<div class="modal fade" id="addKWTaskModal" tabindex="-1" role="dialog" aria-labelledby="addKWTaskModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">New Task: @*<em>TODO: Use JavaScript to dynamically make this the broker name while being typed</em>*@</h4>
            </div>
            <div class="modal-body clearfix">

                <form asp-controller="Tasks" asp-action="Add" method="post">
                    <div class="form-group center-block modal-form">

                        <div class="row">
                            <div class="col-xs-12"><label asp-for="@Model.NewKWTask.Message">Message:</label></div>
                            <div class="col-xs-12"><textarea asp-for="@Model.NewKWTask.Message" class="form-control taskMessage"></textarea></div>
                        </div>

                        <div class="row">
                            @{
                                string dateDue = "";
                                if (Model.NewKWTask.AlertDate != null)
                                {
                                    string[] splitDate = Model.NewKWTask.DateDue.ToString().Split(' ');
                                    dateDue = splitDate[0];
                                }
                            }
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.NewKWTask.DateDue">Date Due:</label></div>
                            <div class="col-xs-5"><input type="text" data-date-autoclose="true" data-date-clear-btn="true" data-date-today-highlight="true" data-provide="datepicker" asp-for="@Model.NewKWTask.DateDue" value="@dateDue" class="form-control" /></div>
                        </div>

                        <div class="row">
                            @{
                                string alertDate = "";
                                if (Model.NewKWTask.AlertDate != null)
                                {
                                    string[] splitAlertDate = Model.NewKWTask.AlertDate.ToString().Split(' ');
                                    alertDate = splitAlertDate[0];
                                }
                            }
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.NewKWTask.AlertDate">Alert Date:</label></div>
                            <div class="col-xs-5"><input type="text" data-date-autoclose="true" data-date-clear-btn="true" data-date-today-highlight="true" data-provide="datepicker" asp-for="@Model.NewKWTask.AlertDate" value="@alertDate" class="form-control modal-TaskAlertDate" /></div>
                        </div>

                        <div class="row priorityRow hidden">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.NewKWTask.Priority">Priority:</label></div>
                            <div class="col-xs-2">
                                <select class="form-control" asp-for="@Model.NewKWTask.Priority">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">Critical</option>
                                </select>
                            </div>
                        </div>

                        <input type="hidden" asp-for="@Model.NewKWTask.DateCreated" />
                        <input type="hidden" class="return-url" name="returnURL" value="" />
                        
                      

                        <button type="submit" class="btn btn-primary pull-right">Create Task</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>