@model KWFCI.Models.ViewModels.InteractionVM


<div class="modal fade" id="editKWTaskModal" tabindex="-1" role="dialog" aria-labelledby="editKWTaskModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="settingsLabel">New Task: @*<em>TODO: Use JavaScript to dynamically make this the broker name while being typed</em>*@</h4>
            </div>
            <div class="modal-body clearfix">

                <form asp-controller="KWTasks" asp-action="AddKWTask" method="post">
                    <div class="form-group center-block modal-form">

                        <div class="row">
                            <div class="col-xs-12"><label asp-for="@Model.Task.Message">Message:</label></div>
                            <div class="col-xs-12"><textarea asp-for="@Model.Task.Message" class="form-control taskMessage"></textarea></div>
                        </div>

                        <div class="row">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.Task.DateDue">Date Due:</label></div>
                            <div class="col-xs-5"><input id="taskDateDue" asp-for="@Model.Task.DateDue" class="form-control" /></div>
                        </div>

                        <div class="row">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.Task.AlertDate">Alert Date:</label></div>
                            <div class="col-xs-5"><input asp-for="@Model.Task.AlertDate" class="form-control" /></div>
                        </div>

                        <div class="row">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.Task.Priority">Priority:</label></div>
                            <div class="col-xs-2">
                                <select class="form-control" asp-for="@Model.Task.Priority">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </div>
                        </div>

                        <input type="hidden" asp-for="@Model.Task.DateCreated" />
                        <input type="hidden" class="addID" asp-for="@Model.NewInteraction.InteractionID" />
                        <input type="hidden" asp-for="@Model.Field" value="NextStep" />
                        <input type="hidden" asp-for="@Model.BrokerID" />

                        <button type="submit" class="btn btn-primary pull-right">Create Task</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>