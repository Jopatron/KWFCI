@model KWFCI.Models.ViewModels.KWTaskVM


<div class="modal fade" id="editKWTaskModal" tabindex="-1" role="dialog" aria-labelledby="editKWTaskModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="settingsLabel">Edit Task: </h4>
            </div>
            <div class="modal-body clearfix">

                <form asp-controller="KWTasks" asp-action="Edit" method="post">
                    <div class="form-group center-block modal-form">

                        <div class="row">
                            <div class="col-xs-12"><label asp-for="@Model.NewKWTask.Message">Message:</label></div>
                            <div class="col-xs-12"><textarea asp-for="@Model.NewKWTask.Message" class="form-control modal-TaskMessage"></textarea></div>
                        </div>
                        <span asp-validation-for="@Model.NewKWTask.Message" class="text-danger"></span>
                        <div class="row">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.NewKWTask.DateDue">Date Due:</label></div>
                            <div class="col-xs-5"><input type="text" data-date-autoclose="true" data-date-clear-btn="true" data-date-today-highlight="true" data-provide="datepicker" asp-for="@Model.NewKWTask.DateDue" class="form-control modal-TaskDateDue" /></div>
                        </div>
                        <span asp-validation-for="@Model.NewKWTask.DateDue" class="text-danger"></span>
                        <div class="row">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.NewKWTask.AlertDate">Alert Date:</label></div>
                            <div class="col-xs-5"><input type="text" data-date-autoclose="true" data-date-clear-btn="true" data-date-today-highlight="true" data-provide="datepicker" asp-for="@Model.NewKWTask.AlertDate" class="form-control modal-TaskAlertDate" /></div>
                        </div>

                        <div class="row priorityRow">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.NewKWTask.Priority">Priority:</label></div>
                            <div class="col-xs-3">
                                <div class="priorityWidth">
                                    <select class="form-control modal-TaskPriority" asp-for="@Model.NewKWTask.Priority">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">Critical</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" class="modal-TaskKWTaskID" asp-for="@Model.NewKWTask.KWTaskID" />
                        <input type="hidden" asp-for="@Model.NewKWTask.DateCreated" />
                        <input type="hidden" class="addID" name="KWTaskID" value="" />

                        <button type="submit" class="btn btn-primary pull-right">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>