@model KWFCI.Models.ViewModels.AdminVM


@{ 
    //Layout = null;
}
<div>
    <div class="col-xs-12">
        <table class="table table-bordered editTable">
            <thead>
                <tr>
                    <th>Edit</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (StaffProfile sp in Model.Staff)
                {
                    <tr>
                        <td>
                            <a class="btn btn-primary btn-md" asp-action="StaffEdit" data-toggle="modal" data-target="#adminEditStaff"
                               asp-route-id="@sp.StaffProfileID">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>
                            @sp.FirstName
                        </td>

                        <td>
                            @sp.LastName
                        </td>

                        <td>
                            @sp.Email
                        </td>

                        <td>
                            @sp.Role
                        </td>

                        <td>
                            <form asp-action="StaffDelete" asp-route-id="@sp.StaffProfileID" method="post">
                                <button type="submit"
                                        class="btn btn-sm btn-danger center-block">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.Partial("Modals/_AdminEditStaffModal", Model.NewStaff)
    </div>
</div>

<style>
    table, tr, th {
        border: 1px solid black;
    }
</style>
