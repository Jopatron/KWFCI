@model Broker
<div class="modal-fade">
    <div class="modal-dialog" role="document">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">@Model.FirstName @Model.LastName</h4>
        </div>
        <div class="modal-body">
            <form asp-action="BrokerEdit" method="post">
                <input type="hidden" asp-for="BrokerID" />
                <div class="form-group center-block">

                    <label asp-for="FirstName">First Name:</label>
                    <input asp-for="FirstName" class="form-control" /><br />

                    <label asp-for="LastName">Last Name:</label>
                    <input asp-for="LastName" class="form-control" /><br />

                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" class="form-control" /><br />

                    <label asp-for="Type">Broker Type:</label>
                    <select class="form-control" asp-for="Type">
                        <option>New Broker</option>
                        <option>Broker In Transition</option>
                    </select><br />

                    <label asp-for="Status"></label>
                    <div><span asp-validation-for="Status" class="text-danger"></span></div>
                    <select asp-for="Status" class="form-control">
                        <option value="Active" selected="selected">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <br /><br />
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input pull-right" type="checkbox" asp-for="EmailNotifications">Email Notifications: &nbsp;&nbsp;
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary pull-right">Save</button>
                </div>
            </form>
        </div>

    </div>

</div>



